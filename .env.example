# Copy this file to .env and provide your Twelve Data API key
TWELVE_DATA_API_KEY=your_api_key_here

# --- Thresholds ---
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_SIGNAL=0
BBANDS_UPPER=2
BBANDS_LOWER=-2
CCI_THRESHOLD=100
ADX_THRESHOLD=25
STOCH_OVERBOUGHT=80
STOCH_OVERSOLD=20

# --- Strategy Toggles ---
USE_RSI=true
USE_MACD=true
USE_BBANDS=true
USE_CCI=true
USE_ADX=true
USE_STOCH=true

# --- Notification Email (future use) ---
NOTIFICATION_EMAIL=you@example.com

# Cache duration in minutes for Twelve Data requests
CACHE_TTL_MINUTES=60
